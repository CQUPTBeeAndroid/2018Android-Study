<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--我的edittext的下划线及光标颜色-->
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorBlack</item>
        <item name="colorControlActivated">@color/colorBlack</item>
    </style>

    <style name="BottomBtnStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorHintText</item>
        <item name="android:background">@color/colorNullVisibility</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
