<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Fragment3">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:background="#c4c4c4"/>

    <RelativeLayout
        android:clickable="true"
        android:background="#fff"
        android:id="@+id/friends"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        >

        <ImageView
            android:id="@+id/pengyou_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/pear_pic" />
        <TextView
            android:padding="0dp"
            android:layout_toRightOf="@id/pengyou_iv"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="朋友圈"
            android:textColor="#000000"
            android:textSize="15sp"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:background="#c4c4c4"/>
    <RelativeLayout
        android:clickable="true"
        android:background="#fff"
        android:id="@+id/saoyisao"
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <ImageView
            android:scaleType="centerInside"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/apple_pic"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/saoyisao_iv"
            android:layout_centerVertical="true"
            />
        <TextView
            android:padding="0dp"
            android:layout_toRightOf="@id/saoyisao_iv"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫一扫"
            android:textColor="#000000"
            android:textSize="15sp"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#c4c4c4"/>
    <RelativeLayout
        android:clickable="true"
        android:background="#fff"
        android:id="@+id/yaoyiyao"
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <ImageView
            android:scaleType="centerInside"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/grape_pic"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/yaoyiyao_iv"
            android:layout_centerVertical="true"
            />
        <TextView
            android:padding="0dp"
            android:layout_toRightOf="@id/yaoyiyao_iv"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="摇一摇"
            android:textColor="#000000"
            android:textSize="15sp"/>
    </RelativeLayout>
    <ImageView

        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:background="#c4c4c4"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/fujin_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/banana_pic"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"/>
        <TextView
            android:padding="0dp"
            android:layout_toRightOf="@+id/fujin_iv"

            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="附近的人"
            android:textColor="#000000"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:background="#c4c4c4"/>
    <RelativeLayout
        android:clickable="true"
        android:background="#fff"
        android:id="@+id/kanyikan"
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <ImageView
            android:scaleType="centerInside"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/apple_pic"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/kanyikan_iv"
            android:layout_centerVertical="true"
            />
        <TextView
            android:padding="0dp"
            android:layout_toRightOf="@id/kanyikan_iv"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="看一看"
            android:textColor="#000000"
            android:textSize="15sp"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#c4c4c4"/>
    <RelativeLayout
        android:clickable="true"
        android:background="#fff"
        android:id="@+id/souyisou"
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <ImageView
            android:scaleType="centerInside"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/grape_pic"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/souyisou_iv"
            android:layout_centerVertical="true"
            />
        <TextView
            android:padding="0dp"
            android:layout_toRightOf="@id/souyisou_iv"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="摇一摇"
            android:textColor="#000000"
            android:textSize="15sp"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#c4c4c4" />
    <RelativeLayout
        android:clickable="true"
        android:background="#fff"
        android:id="@+id/gouwu"
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <ImageView
            android:scaleType="centerInside"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cherry_pic"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/gouwu_iv"
            android:layout_centerVertical="true"
            />
        <TextView
            android:padding="0dp"
            android:layout_toRightOf="@id/gouwu_iv"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购物"
            android:textColor="#000000"
            android:textSize="15sp"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#c4c4c4"/>
    <RelativeLayout
        android:clickable="true"
        android:background="#fff"
        android:id="@+id/youxi"
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <ImageView
            android:scaleType="centerInside"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mango_pic"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/youxi_iv"
            android:layout_centerVertical="true"
            />
        <TextView
            android:padding="0dp"
            android:layout_toRightOf="@id/youxi_iv"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游戏"
            android:textColor="#000000"
            android:textSize="15sp"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="#c4c4c4"/>







</LinearLayout>